{
    "name": "AlexNet",
    "n_gpu": 1,

    "arch": {
        "type": "AlexModel",
        "args": {}
    },
    "data_loader": {
        "type": "TinyImageNetDataloader",
        "args":{
            "data_dir": "../autodl-tmp/data/tinyImageNetNoPickle/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2,
	        "assign_val_sample": true,
            "augment_pics": 8
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropyLoss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "../autodl-tmp/saved/",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
